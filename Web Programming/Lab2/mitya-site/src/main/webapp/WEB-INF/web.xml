<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <display-name>Mitya's Beige</display-name>
    <servlet>
        <description>Servlet implementing controller (sort of) from MVC pattern</description>
        <display-name>ControllerServlet</display-name>
        <servlet-name>Controller</servlet-name>
        <servlet-class>mitya.site.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/pages/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <description>An unmapped servlet used instead of business logic (it's dumb, but it's required in the task)
        </description>
        <display-name>AreaCheckServlet</display-name>
        <servlet-name>AreaChecker</servlet-name>
        <servlet-class>mitya.site.AreaCheckServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AreaChecker</servlet-name>
        <url-pattern>/checker</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>IndexFilter</filter-name>
        <filter-class>mitya.site.IndexFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>IndexFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Error</servlet-name>
        <jsp-file>/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>



    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <location>/error.jsp</location>
    </error-page>


</web-app>	