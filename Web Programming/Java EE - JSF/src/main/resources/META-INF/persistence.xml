<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="org.hibernate.shot.jpa">
    <description>
      A persistence unit for managing shot records and sessions.
    </description>

    <class>mitya.sites.face.data.model.ShotRecord</class>
    <class>mitya.sites.face.data.model.User</class>
    <properties>
      <!-- Database connection settings -->
      <property name="hibernate.connection.datasource" value="java:/PostgreDS"/>
      <!-- Automatically export the schema -->
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />


      <!-- Echo all executed SQL to console -->
      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.format_sql" value="false" />
      <property name="hibernate.highlight_sql" value="false" />
    </properties>

  </persistence-unit>

</persistence>